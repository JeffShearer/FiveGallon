<h1>Recipes</h1><% @recipes.each do |recipe| %>
<div class="panel panel-default">
    <div class="panel-body">
        <h3>
        <%= recipe.name %></h3><%= recipe.style %><%= recipe.description %><br>
        <%= link_to 'View', recipe %>
        <%= link_to 'Modify', edit_recipe_path(recipe) %>
        <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to "View Batches", recipe_batches_path(recipe) %>
    </div>
</div><% end %><br>
<div class="center">
    <%= link_to 'Create a new recipe', new_recipe_path, class: "btn btn-primary btn-lg" %>
</div>